<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_fon</item>
        <item name="colorPrimaryVariant">@color/dark_fon</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_fon</item>
        <item name="colorSecondaryVariant">@color/dark_fon</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="hintsColor">@color/dark_hint</item>
        <item name="iconsColor">@color/white</item>
        <item name="switchColor">@color/blue_fon</item>
        <item name="backgroundMainActivityColor">@color/dark_fon</item>
        <item name="backgroundColorWithAlpha">@color/whiteWithAlpha</item>
        <item name="searchFieldBackgroundColor">@color/white</item>
        <item name="dialogButtonsColor">@color/white</item>
    </style>
</resources>