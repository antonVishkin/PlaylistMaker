<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BigButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ArrowBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="NavigationBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">@dimen/settings_text_margin</item>
        <item name="android:layout_marginBottom">@dimen/settings_text_margin</item>
        <item name="android:layout_marginStart">@dimen/standard_margin</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/settings_text_margin</item>
        <item name="android:layout_marginBottom">@dimen/settings_text_margin</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:tint">?attr/iconsColor</item>
    </style>

    <style name="RefreshButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TrackInfoText">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/grey_text</item>
    </style>

    <style name="rounded_corner">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="TabStyLe">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/extra_small_text_size</item>
    </style>
</resources>